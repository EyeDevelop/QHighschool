{
  "swagger": "2.0",
  "info": {
    "description": "This is the api-documentation of the QHighschool api",
    "version": "1.0.0",
    "title": "QHighschool api",
    "contact": {
      "email": "steven.bronsveld@gmail.com"
    }
  },
  "host": "",
  "basePath": "/api",
  "tags": [
    {
      "name": "QHighschool",
      "description": "The Q-highschool api"
    }
  ],
  "paths": {
    "/courses": {
      "get": {
        "tags": [
          "QHighschool"
        ],
        "summary": "Get list of all courses",
        "operationId": "getCourse",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type":"array",
              "items": {
                "$ref": "#/definitions/Course"
              }
            }
          }
        },
        "security": [
          {
            "userId": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "userId": {
      "type": "apiKey",
      "in": "query",
      "name": "userId"
    }
  },
  "definitions": {
    "Course": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "teacher": {
          "type": "string"
        },
        "period": {
          "type": "integer",
          "format": "int64"
        },
        "schoolyear": {
          "type": "string",
          "enum": [
            "2018/2019",
            "2019/2020",
            "2021/2022",
            "2023/2024"
          ]
        }
      },
      "xml": {
        "name": "Course"
      }
    }
  }
}