{
  "swagger": "2.0",
  "info": {
    "description": "This is the api-documentation of the QHighschool api",
    "version": "1.0.0",
    "title": "QHighschool api",
    "contact": {
      "email": "steven.bronsveld@gmail.com"
    }
  },
  "basePath": "/api",
  "tags": [
    {
      "name": "User",
      "description": "The user api"
    },
    {
      "name": "Course",
      "description": "The course"
    },
    {
      "name": "Subject",
      "description": "The subject api"
    }
  ],
  "paths": {
    "/course/list": {
      "get": {
        "tags": [
          "Course"
        ],
        "summary": "Get list of all courses",
        "operationId": "getCourse",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Course"
              }
            }
          }
        }
      }
    },
    "/course/choices": {
      "get": {
        "tags": [
          "Course"
        ],
        "summary": "Get list of courses to choose from",
        "operationId": "getChoices",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Course"
              }
            }
          }
        }
      }
    },
    "/subject/list": {
      "get": {
        "tags": [
          "Subject"
        ],
        "summary": "Get list of subjects",
        "operationId": "getSubjects",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Subject"
              }
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get user data",
        "operationId": "getUser",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        },
        "security": [
          {
            "userId": []
          }
        ]
      },
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Update user data",
        "operationId": "setUser",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "name": "preferedEmail",
            "in": "formData",
            "description": "The new prefered email",
            "required": false,
            "type": "string"
					},
					{
            "name": "profile",
            "in": "formData",
            "description": "The profile of the student",
            "required": false,
            "type": "string"
					},
					{
            "name": "phoneNumber",
            "in": "formData",
            "description": "Thephone number of the student",
            "required": false,
            "type": "string"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        },
        "security": [
          {
            "userId": []
          }
        ]
      }
    },
    "/user/choices": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Update user data",
        "operationId": "setUserChoices",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "name": "choices",
            "in": "formData",
            "description": "An array of the keys of the chosen courses",
            "required": false,
            "type": "array",
            "items": {
              "type": "string",
              "maxItems": 3
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "maxLength": 3,
              "items": {
                "$ref": "#/definitions/Course"
              }
            }
          }
        },
        "security": [
          {
            "userId": []
          }
        ]
      },
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Update user data",
        "operationId": "getUserChoices",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "maxLength": 3,
              "items": {
                "$ref": "#/definitions/Course"
              }
            }
          }
        },
        "security": [
          {
            "userId": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "userId": {
      "type": "apiKey",
      "in": "header",
      "name": "userId"
    }
  },
  "definitions": {
    "Course": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "subjectId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "teacherId": {
          "type": "string"
        },
        "period": {
          "type": "integer",
          "format": "int64"
				},
				"day": {
          "type": "string"
        },
        "schoolYear": {
          "type": "string",
          "enum": [
            "2018/2019",
            "2019/2020",
            "2021/2022",
            "2023/2024"
          ]
        }
      },
      "xml": {
        "name": "Course"
      }
    },
    "Subject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Course"
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "school": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "year": {
          "type": "integer",
          "format": "int64"
        },
        "level": {
          "type": "string",
          "enum": [
            "vwo",
            "havo",
            "mavo"
          ]
        },
        "preferedEmail": {
          "type": "string"
        },
        "profile": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Course"
      }
    }
  }
}